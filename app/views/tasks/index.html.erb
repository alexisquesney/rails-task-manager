<h1>List of all tasks</h1>
Name of task - done? <br>
<% @tasks.each do |task| %>
<%= link_to task.name, task_path(task) %> - <%= task.done %>
<%= link_to 'edit', edit_task_path(task) %>
<%= link_to 'delete', task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %> <br>
<% end %>

<%= link_to 'add new task', new_task_path %>
